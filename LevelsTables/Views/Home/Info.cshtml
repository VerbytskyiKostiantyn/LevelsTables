@using Levels.Models
@model Tank
<div>
<h2>Танк @Model.Name</h2>
<table>
    <tr>
        <td>
            <table>
                <tr>
                    <th>Поле</th>
                    <th>Значення</th>
                </tr>
                <tr>
                    <td><label asp-for="@Model.Id"></label></td>
                    <td><span>@Model.Id</span></td>
                </tr>
                <tr>
                    <td><label asp-for="@Model.Name"></label></td>
                    <td><span>@Model.Name</span></td>
                </tr>
                <tr>
                    <td><label asp-for="@Model.Address"></label></td>
                    <td><span>@Model.Address</span></td>
                </tr>
                <tr>
                    <td><label asp-for="@Model.Description"></label></td>
                    <td><span>@Model.Description</span></td>
                </tr>
                <tr>
                    <td><label asp-for="@Model.Active"></label></td>
                    <td><span>@Model.Active</span></td>
                </tr>
                <tr>
                    <td><label asp-for="@Model.MaxVolume"></label></td>
                    <td><span>@Model.MaxVolume</span></td>
                </tr>
                <tr>
                    <td><label asp-for="@Model.Product_zero"></label></td>
                    <td><span>@Model.Product_zero</span></td>
                </tr>
                <tr>
                    <td><label asp-for="@Model.Water_zero"></label></td>
                    <td><span>@Model.Water_zero</span></td>
                </tr>
                <tr>
                    <td><label asp-for="@Model.Alert_Level"></label></td>
                    <td><span>@Model.Alert_Level</span></td>
                </tr>
                <tr>
                    <td><label asp-for="@Model.FuelID"></label></td>
                    <td><span>@Model.FuelID</span></td>
                </tr>
                <tr>
                    <td><label asp-for="@Model.StationID"></label></td>
                    <td><span>@Model.StationID</span></td>
                </tr>
                <tr>
                    <td><label asp-for="@Model.TankNumber"></label></td>
                    <td><span>@Model.TankNumber</span></td>
                </tr>
                <tr>
                    <td><label asp-for="@Model.TankUID"></label></td>
                    <td><span>@Model.TankUID</span></td>
                </tr>
                <tr>
                    <td><label asp-for="@Model.ProbeSerial"></label></td>
                    <td><span>@Model.ProbeSerial</span></td>
                </tr>
                <tr>
                    <td><label asp-for="@Model.Probetype"></label></td>
                    <td><span>@Model.Probetype</span></td>
                </tr>
                <tr>
                    <td><label asp-for="@Model.ExternalProbeId"></label></td>
                    <td><span>@Model.ExternalProbeId</span></td>
                </tr>
            </table>
        </td>

        <td><div id="example-table"></div></td>
    </tr>
</table>

<form enctype="multipart/form-data" method="post">
    <input type="file" name="file" />
    <button type="submit">Upload CSV</button>
</form>

</div>
